<section class="bg-white">
          <div class="container">
            <header class="section-header">
              <h2>Freshest Uploads</h2>
              <p>Newest content from our members around the world.</p>
            </header>

          <div class="row">
              <!-- Shot -->
              <% @shots.last(32).each do |shot| %>
              <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="shot shot-small">
                  <div class="shot-preview">
                    <a class="img" href="<%= shot.image_url %>"><img src="<%= shot.images_normal %>"></a>
                  </div>

                  <div class="shot-info">
                    <a href="#"><img src="<%= shot.user.designer_avatar_url %>" alt='avatar'></a>
                    <h6><a href="<%= shot.image_url %>"><%= shot.title %></a></h6>
                    <p><time datetime="<%= shot.created_at %>"></time> Added <%= time_ago_in_words(shot.created_at) %> in <a href="page-search.html">App</a></p>
                  </div>
                </div>
              </div>
              <% end %>

            <!-- See all button -->
              <div class="col-xs-12 col-sm-4 col-md-offset-4">
                <br><br>
                <a class="btn btn-primary btn-block" href="explore-style3-cols3.html">See all</a>
              </div>

            </div>

          </div>
        </section>
      <br>
  </section>
</div>
